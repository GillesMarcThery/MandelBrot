        <StatusBar Grid.Row="3">
            <Label Name="Label_Size" Content="xx"></Label>
            <Separator />
            <Label Name="Label_Count" Content="xx"></Label>
            <Separator />
            <Label Name="Label_DivMax" Content="xx"></Label>
            <Separator />
            <Label Name="Label_PixelsXY" Content="out"></Label>
            <Separator />
            <Label Name="Label_ReelXY" Content="out"></Label>
